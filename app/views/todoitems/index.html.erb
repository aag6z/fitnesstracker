
<h1 class="lead" id="itemsh">Items</h1>
	
<div class="well" id="itemsPanel">
    <% @todoitems.each do |todoitem| %>
    	<div class="row">
    	<div class="col-md-2">
    	<div class="panel panel-default">
    		<div class="panel-heading">
    			<h3 class="panel-title"><%= todoitem.title %></h3>
    		</div>
    	
        <div class="panel-body" id="eachItemPanel">
        	<%= todoitem.task %><br>
       		<div id="del"><%= link_to todoitem, method: :delete, data: { confirm: 'Are you sure?' } do %>
       			<button type="button" class="btn btn-primary">Done</button>      			
       			<%end%>
       		</div>
      	</div>
      	</div>
      	</div>
    <% end %>
</div>
  


